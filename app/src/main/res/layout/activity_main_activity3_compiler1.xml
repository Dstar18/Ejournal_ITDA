<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgutama"
    tools:context=".MainActivity3_compiler1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-10dp"
        android:contentDescription="@string/my_image_description"
        android:src="@drawable/cop_bidangcompiler" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="614dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:isScrollContainer="true"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="319dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="VIRTUAL MUSEUM TOUR IN WASAKA BANJARMASIN TO INTRODUCE THE COLLECTION OF LEADERS AND LOCAL HEROES BASED ON MOBILE AUGMENTED REALITY TECHNOLOGY IN THE NEW NORMAL ERA"
                android:textColor="#4C3735"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <ImageView
            android:layout_width="121dp"
            android:layout_height="155dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/my_image_description"
            android:src="@drawable/satu_jurnalcompiler" />

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="399dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Diterbitkan : 1 Mei 2021"
                android:textColor="#E8EBEC"
                android:background="#5C171919"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="399dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Aulia Akhrian Syahidi, Subandi Subandi, Adistya Nadia Azura, Ida Hastuti"
                android:textColor="#E8EBEC"
                android:background="#5C171919"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="399dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Museum Wasaka meruppakan salah satu museum yang berada di banjarmasin . Tujuan dari penelitian ini adalah mengembangkan aplikasi Augmented Reality Tecnology sebagai sarana promosi."
                android:textColor="#E8EBEC"
                android:background="#5C171919"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="50dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <Button
                android:id="@+id/btn_bukacompiler1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Buka" />
        </TableRow>

        <TableRow
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#00171919"
            android:scrollbars="vertical">

            <Button
                android:id="@+id/btn_downloadcompiler1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="0dp"
                android:onClick="download_compiler1"
                android:text="Download" />
        </TableRow>

    </TableLayout>

</RelativeLayout>